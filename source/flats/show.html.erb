<% flat = data.flats[owner] %>


<div class="banner show-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>'); height: 50vh; background-position: center;">
</div>

<h1 class="text-center"><%= flat.name %></h1>

<div class="booking">

  <div class="text-left show-body">


    <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle avatar" %>

    <p>Rating: <%= flat.rating %>/5</p>

    <div class="rating">
      <% flat.rating.times do %>
        <i class="fa fa-star"></i>
      <% end %>
      <% (5 - flat.rating).times do %>
        <i class="fa fa-star-o"></i>
      <% end %>
    </div>

    <h4><%= flat.description %></h4>

    <p><%= flat.city_name %></p>
  </div>

  <form>
    <h2>Book this flat</h2>
    <div class="form-inline">
      <div class="form-group">
        <input type="text" class="form-control" aria-describedby="emailHelp" placeholder="checkin">
      </div>
      <div class="form-group">
        <input type="text" class="form-control" placeholder="checkout">
      </div>
    </div>
    <div class="form-group">
      <select name id="guests" class="form-control">
        <option value="1">1 guest</option>
        <option value="2">2 guests</option>
        <option value="3">3 guests</option>
      </select>
    </div>
    <button type="submit" class="btn btn-danger book-now">Book now</button>
  </form>
</div>

<div class="flat-info text-center">
  <h4> What <%= flat.name %> has to offer:</h4>
  <div class="description">
    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Porro assumenda maiores, eveniet minima obcaecati repellendus delectus, doloribus iste veritatis quos et repudiandae est aut maxime eius facere, at, ut nam?
    </p>
  </div>
  <ul>
    <% flat.each do |item| %>
      <% if item[1] == true %>
        <li>
          <i class="fa fa-<%=item[0]%>"></i> <%=item[0]%> <i class="fa fa-check-circle"></i>
        </li>
      <% elsif item[1] == false %>
        <li>
          <i class="fa fa-<%=item[0]%>"></i> <%=item[0]%> <i
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
